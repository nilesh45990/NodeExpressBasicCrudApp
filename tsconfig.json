{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        },
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "include": [
        "src/*"
    ]
}